{
  // TypeScript Configuration
  // 
  // Configures TypeScript compiler options for the React application
  // Features:
  // - Strict type checking
  // - Modern JavaScript features
  // - React JSX support
  // - Module resolution
  // - Source maps
  // - Decorator support
  
  "compilerOptions": {
    // Language and Environment
    "target": "es5",                      // Compile to ES5 for browser compatibility
    "lib": [                              // Include type definitions for
      "dom",                              // - DOM APIs
      "dom.iterable",                     // - Iterable DOM APIs
      "esnext"                            // - Latest ECMAScript features
    ],
    "jsx": "react-jsx",                   // Support React JSX syntax
    
    // Modules
    "module": "esnext",                   // Use ES modules
    "moduleResolution": "node",           // Use Node.js module resolution
    "resolveJsonModule": true,            // Allow importing JSON files
    "isolatedModules": true,              // Ensure each file can be safely transpiled
    
    // Strict Checks
    "strict": true,                       // Enable all strict type checking options
    "noImplicitAny": true,               // Raise error on expressions with implied 'any' type
    "strictNullChecks": true,            // Enable strict null checks
    
    // Additional Checks
    "allowJs": true,                      // Allow JavaScript files to be compiled
    "skipLibCheck": true,                 // Skip type checking of declaration files
    "esModuleInterop": true,             // Enable ES Module interop
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    
    // Emit
    "noEmit": true,                      // Do not emit outputs (CRA handles this)
    "sourceMap": true,                   // Generate source maps for debugging
    
    // Advanced
    "experimentalDecorators": true,      // Enable experimental support for decorators
    "emitDecoratorMetadata": true,       // Emit design-type metadata for decorated declarations
    
    // Paths
    "baseUrl": "src"                     // Base directory to resolve non-relative module names
  },
  "include": [
    "src"                                // Include all files in src directory
  ]
} 